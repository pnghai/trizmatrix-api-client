<h4 class="center-align light-green-text text-darken-2">
  {{fa-icon "lightbulb-o"}} Nhấp menu để xem
</h4>
<div class="row">
  <div class="col s12 offset-m1 m10">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
          <span class="card-title">hoặc chọn thông số dưới đây</span>
          <form>
            <div class="row">
              <div class="col s12 m5">
                <label for="first_name">Thông số cần cải tiến</label>
                {{ember-chosen
                placeholder="Chọn thông số cần cải tiến..."
                allowSingleDeselect=true
                optionValuePath="id"
                optionLabelPath="title"
                content=model
                value=parameters
                }}
              </div>
              <div class="col s12 m2 center-align">
                {{fa-icon "plus"}}
              </div>
              <div class="col s12 m5">
                <label for="first_name">Thông số cần khắc phục</label>
                {{ember-chosen
                placeholder="Chọn thông số cần khắc phục..."
                allowSingleDeselect=true
                optionValuePath="id"
                optionLabelPath="title"
                content=model
                value=parameters
                }}
              </div>
            </div>
            <div class="row">
              <div class="col s12 center-align">
                {{md-btn text='Gợi ý'
                action='showSolutions'
                icon='fa fa-hand-o-right'
                iconPosition='right'
                buttonType='large'
                class='deep-orange darken-2 white-text'}}
              </div>
            </div>
          </form>
          {{outlet}}
      </div>
    </div>
  </div>
</div>